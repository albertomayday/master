# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values

# === SYSTEM CONFIGURATION ===
DUMMY_MODE=true
LOG_LEVEL=INFO

# === DATABASE CONFIGURATION ===
DB_USER=tiktok_user
DB_PASSWORD=change_this_password_in_production
DB_NAME=tiktok_automation
DB_HOST=database
DB_PORT=5432

# === REDIS CONFIGURATION ===
REDIS_PASSWORD=change_this_password_in_production
REDIS_HOST=redis
REDIS_PORT=6379

# === TELEGRAM CONFIGURATION ===
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# === META ADS CONFIGURATION ===
# Get these from https://developers.facebook.com
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here
META_ACCESS_TOKEN=your_access_token_here
META_AD_ACCOUNT_ID=act_1234567890
META_PAGE_ID=your_page_id_here
META_PIXEL_ID=your_pixel_id_here

# === GOLOGIN CONFIGURATION ===
GOLOGIN_API_TOKEN=your_gologin_token_here

# === ML CONFIGURATION ===
ML_MODEL_PATH=/app/models
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# === MONITORING ===
ENABLE_PROMETHEUS=false
ENABLE_GRAFANA=false

# === SECURITY ===
JWT_SECRET=change_this_secret_in_production
ENCRYPTION_KEY=change_this_key_in_production

# === NETWORKING ===
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
ML_CORE_PORT=8000
DASHBOARD_PORT=8501
META_ADS_PORT=8002
