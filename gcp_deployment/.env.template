# Google Cloud Platform Environment Configuration Template
# Copy this file to .env and fill in your specific values

# =============================================================================
# GCP Project Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
ENVIRONMENT=prod

# =============================================================================
# Meta Ads API Configuration
# =============================================================================
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-long-lived-access-token
META_AD_ACCOUNT_ID=act_your-ad-account-id
META_BUSINESS_ID=your-business-manager-id
META_PIXEL_ID=your-pixel-id

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://meta_ads_user:password@/meta_ads?host=/cloudsql/your-project:us-central1:meta-ads-db-prod
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# Cloud Storage Configuration
# =============================================================================
STORAGE_BUCKET=your-project-meta-ads-storage
MODELS_BUCKET=your-project-meta-ads-models
MODEL_STORAGE_PATH=gs://your-project-meta-ads-models

# =============================================================================
# Pub/Sub Configuration
# =============================================================================
PUBSUB_TOPIC=meta-ads-events
PUBSUB_SUBSCRIPTION=meta-ads-events-subscription

# =============================================================================
# ML Model Configuration
# =============================================================================
ML_MODEL_VERSION=v1.0.0
YOLO_MODEL_PATH=gs://your-project-meta-ads-models/yolo/best.pt
OPTIMIZATION_MODEL_PATH=gs://your-project-meta-ads-models/optimization/model.pkl
AUTO_RETRAIN_ENABLED=true
MODEL_UPDATE_THRESHOLD=0.85

# =============================================================================
# Campaign Management Configuration
# =============================================================================
DEFAULT_CAMPAIGN_BUDGET=100.0
MAX_DAILY_BUDGET=1000.0
AUTO_OPTIMIZATION_ENABLED=true
PERFORMANCE_THRESHOLD=0.02
BID_ADJUSTMENT_FACTOR=0.1

# =============================================================================
# Monitoring and Alerting
# =============================================================================
MONITORING_ENABLED=true
ALERT_EMAIL=alerts@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
HEALTH_CHECK_INTERVAL=300
ALERT_THRESHOLDS_CPC=2.0
ALERT_THRESHOLDS_CTR=0.01
ALERT_THRESHOLDS_SPEND_RATE=1.2

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-for-jwt-signing
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
GOOGLE_CLOUD_LOGGING=true
STRUCTURED_LOGGING=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
BURST_SIZE=10

# =============================================================================
# Feature Flags
# =============================================================================
DUMMY_MODE=false
DEBUG_MODE=false
ENABLE_ADVANCED_TARGETING=true
ENABLE_LOOKALIKE_AUDIENCES=true
ENABLE_AUTO_BIDDING=true
ENABLE_CREATIVE_TESTING=true

# =============================================================================
# Webhook Configuration
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# =============================================================================
# Cloud Functions Configuration (if using)
# =============================================================================
FUNCTION_REGION=us-central1
FUNCTION_TIMEOUT=540
FUNCTION_MEMORY=512MB

# =============================================================================
# Development/Testing Configuration
# =============================================================================
TEST_DATABASE_URL=sqlite:///test.db
TEST_MODE=false
PYTEST_WORKERS=4