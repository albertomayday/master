# Configuration File

# ============================================
# GENERAL SETTINGS
# ============================================
DUMMY_MODE=true  # Set to false for production
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================
# META ADS CONFIGURATION
# ============================================
# Get from: https://developers.facebook.com/apps/
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here
META_ACCESS_TOKEN=your_long_lived_access_token_here

# Get from: https://business.facebook.com/settings/ad-accounts/
META_AD_ACCOUNT_ID=act_123456789

# Get from: https://www.facebook.com/pages/
META_PAGE_ID=your_page_id_here

# Campaign Settings
DAILY_BUDGET=50  # USD per day
CAMPAIGN_OBJECTIVE=CONVERSIONS  # CONVERSIONS, TRAFFIC, ENGAGEMENT
OPTIMIZATION_GOAL=LANDING_PAGE_VIEWS  # or CONVERSIONS

# ============================================
# FACEBOOK PIXEL CONFIGURATION
# ============================================
# Get from: https://business.facebook.com/events_manager
META_PIXEL_ID=your_pixel_id_here
META_CONVERSION_API_TOKEN=your_conversion_api_token_here

# Tracking Events
TRACK_PAGE_VIEW=true
TRACK_VIEW_CONTENT=true
TRACK_ADD_TO_CART=true
TRACK_INITIATE_CHECKOUT=true
TRACK_PURCHASE=true
TRACK_LEAD=true
TRACK_COMPLETE_REGISTRATION=true

# Custom Events for Music Marketing
TRACK_SPOTIFY_CLICK=true
TRACK_YOUTUBE_CLICK=true
TRACK_APPLE_MUSIC_CLICK=true
TRACK_VIDEO_WATCH_75=true

# ============================================
# YOUTUBE API CONFIGURATION
# ============================================
# Get from: https://console.cloud.google.com/
# Enable YouTube Data API v3
YOUTUBE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# Upload Settings
YOUTUBE_DEFAULT_CATEGORY=10  # Music
YOUTUBE_DEFAULT_PRIVACY=public  # public, unlisted, private
YOUTUBE_AUTO_MONETIZE=true
YOUTUBE_MADE_FOR_KIDS=false

# ============================================
# LANDING PAGE CONFIGURATION
# ============================================
LANDING_DOMAIN=your-domain.com
LANDING_BASE_URL=https://your-domain.com
LANDING_DEFAULT_TEMPLATE=music_artist_v1

# A/B Testing
AB_TESTING_ENABLED=true
AB_TEST_TRAFFIC_SPLIT=50  # 50/50 split

# Optimization
SPEED_OPTIMIZATION=true
IMAGE_COMPRESSION=true
LAZY_LOADING=true
CDN_ENABLED=true

# ============================================
# ML PREDICTOR CONFIGURATION
# ============================================
ML_MODEL_TYPE=music_marketing
ML_AUTO_RETRAIN=true
ML_RETRAIN_INTERVAL=86400  # 24 hours in seconds
ML_PREDICTION_CACHE=true
ML_CACHE_TTL=3600  # 1 hour

# Prediction Types
ML_PREDICT_CTR=true  # Click-through rate
ML_PREDICT_CONVERSION=true
ML_PREDICT_VIDEO_PERFORMANCE=true
ML_PREDICT_OPTIMAL_BUDGET=true
ML_PREDICT_AUDIENCE_INTEREST=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=marketing_user
DB_PASSWORD=SuperSecurePassword123!ChangeThis
DB_NAME=marketing_funnel_v2
DB_HOST=database-v2
DB_PORT=5432

# Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=RedisSecurePassword456!ChangeThis
REDIS_HOST=redis-v2
REDIS_PORT=6379
REDIS_DB=0

# Cache Settings
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=50

# ============================================
# AUTOMATION SETTINGS
# ============================================
AUTO_OPTIMIZATION=true
AUTO_PAUSE_LOW_PERFORMERS=true
AUTO_BOOST_HIGH_PERFORMERS=true
AUTO_SCALE_BUDGET=true

# Thresholds
MIN_CTR_THRESHOLD=0.5  # Pause if CTR < 0.5%
MAX_CPC_THRESHOLD=5.0  # Pause if CPC > $5
MIN_ROAS_THRESHOLD=1.5  # Pause if ROAS < 1.5x

# Budget Scaling
BUDGET_INCREASE_TRIGGER_ROAS=3.0  # Increase budget if ROAS > 3.0x
BUDGET_INCREASE_PERCENTAGE=20  # Increase by 20%
BUDGET_DECREASE_TRIGGER_ROAS=1.0  # Decrease if ROAS < 1.0x
BUDGET_DECREASE_PERCENTAGE=30  # Decrease by 30%

# ============================================
# NOTIFICATIONS & ALERTS
# ============================================
ENABLE_ALERTS=true
ALERT_EMAIL=your-email@example.com
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook-url
SLACK_WEBHOOK=https://hooks.slack.com/services/your-slack-webhook

# Alert Triggers
ALERT_ON_HIGH_SPEND=true
ALERT_ON_LOW_PERFORMANCE=true
ALERT_ON_SYSTEM_ERROR=true
ALERT_ON_DAILY_REPORT=true

# Daily Report Time (UTC)
DAILY_REPORT_TIME=08:00

# ============================================
# PROXY CONFIGURATION (Optional)
# ============================================
PROXY_ENABLED=false
PROXY_HOST=your-proxy-host.com
PROXY_PORT=8080
PROXY_USERNAME=your_proxy_user
PROXY_PASSWORD=your_proxy_pass

