# Dockerfile for Meta Ads Service
# Facebook Business SDK and campaign automation

FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY social_extensions/meta/ ./meta/
COPY config/ ./config/
COPY src/ ./src/

# Create necessary directories
RUN mkdir -p /app/logs /app/data

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV DUMMY_MODE=true

# Expose Meta Ads API port
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Run Meta Ads API
CMD ["python", "-m", "uvicorn", "meta.api_endpoints:router", "--host", "0.0.0.0", "--port", "8002"]
